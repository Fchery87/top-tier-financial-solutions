# ==================================================
# DATABASE (Required)
# ==================================================
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# ==================================================
# AUTHENTICATION (Required)
# ==================================================
BETTER_AUTH_SECRET="your-secret-key-min-32-chars"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# FastAPI Backend (for server-side rendering)
API_URL="http://127.0.0.1:8000/api/v1"

# FastAPI JWT Authentication
SECRET_KEY="your-secret-key-for-jwt-min-32-chars"

# ==================================================
# CLOUDFLARE R2 STORAGE (Required for file uploads)
# ==================================================
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="credit-reports"

# ==================================================
# GOOGLE AI - Gemini (Required for AI features)
# ==================================================
GOOGLE_AI_API_KEY="your-google-ai-api-key"

# ==================================================
# EMAIL SERVICE (Choose one provider)
# ==================================================
# Option 1: Resend (Recommended)
RESEND_API_KEY="re_xxxxxxxxxxxxx"

# Option 2: SendGrid
SENDGRID_API_KEY="SG.xxxxxxxxxxxxx"

# Option 3: SMTP (e.g., Gmail, AWS SES)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@example.com"
SMTP_PASSWORD="your-email-app-password"

# Email sender address
EMAIL_FROM="noreply@yourdomain.com"
CONTACT_EMAIL="contact@yourdomain.com"

# Company Info (used in email templates)
COMPANY_NAME="Top Tier Financial Solutions"
COMPANY_PHONE="(555) 123-4567"
COMPANY_EMAIL="support@yourdomain.com"
COMPANY_ADDRESS="123 Main St, City, State 12345"

# ==================================================
# CAL.COM INTEGRATION (For booking consultations)
# ==================================================
NEXT_PUBLIC_CAL_USERNAME="your-cal-username"
NEXT_PUBLIC_CAL_EVENT_TYPE="consultation"

# ==================================================
# RATE LIMITING (Required for production)
# ==================================================
# Upstash Redis for rate limiting - Get from https://console.upstash.com
UPSTASH_REDIS_REST_URL="https://your-project.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-token-here"

# ==================================================
# ERROR MONITORING (Optional but recommended)
# ==================================================
# Sentry for error tracking and performance monitoring
SENTRY_DSN="https://your-key@sentry.io/your-project-id"
NEXT_PUBLIC_SENTRY_DSN="https://your-key@sentry.io/your-project-id"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-project-name"

# ==================================================
# ANALYTICS (Optional - choose one or both)
# ==================================================
# Google Analytics - Get from https://analytics.google.com
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Plausible Analytics - Privacy-friendly alternative
NEXT_PUBLIC_PLAUSIBLE_DOMAIN="yourdomain.com"
